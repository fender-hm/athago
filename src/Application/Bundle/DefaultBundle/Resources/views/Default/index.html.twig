{% extends '::layout.html.twig' %}

{% block content %}
    <h1>{{ page.title|escape }}</h1>
    {{ page.content|raw }}
{% endblock %}

{% block slider %}
    {{ render(controller("ApplicationSliderBundle:Default:index", {'id': 1})) }}
{% endblock %}

{% block rightside %}
    {{ render(controller('ApplicationSaleBundle:Default:widget')) }}
{% endblock %}

{% block title %}{{ page.metatitle | default(page.title) ~ ' - ' ~ parent() }}{% endblock %}

{% block meta_description %}{% spaceless %}{{ page.metadescription }}{% endspaceless %}{% endblock %}

{% block meta_keywords %}{% spaceless %}{{ page.metakeywords }}{% endspaceless %}{% endblock %}